   	<!--  Hibernate Configuration-->
	<!-- context:property-placeholder location="classpath:jdbc.properties" /-->
    <tx:annotation-driven />
    <bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
        <property name="dataSource" ref="dataSource" />
        
        <property name="annotatedClasses">
            <list>
				<value>org.jtpd.domain.model.Customer</value>
				<value>org.jtpd.domain.model.Jobs</value>
				<value>org.jtpd.domain.model.Activities</value>
				<value>org.jtpd.domain.model.ActivityCustomer</value>
				<value>org.jtpd.domain.model.TrainingNames</value>
				<value>org.jtpd.domain.model.User</value>
				<value>org.jtpd.domain.model.Story</value>
				<value>org.jtpd.domain.model.Comment</value>
				<value>org.jtpd.domain.model.Tag</value>
				<value>org.jtpd.domain.model.Category</value>
            </list>
        </property>

        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
                <prop key="hibernate.show_sql">true</prop>
            </props>
        </property>
    </bean> 
	<bean id="dataSource" class="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource" destroy-method="close">
        <property name="url" value="jdbc:mysql://db.jtpd.org:3306/JTPD" />
        <property name="user" value="jtpd" />
        <property name="password" value="jtpd1234" />
    </bean>
	<bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="wicketApplication" class="org.jtpd.web.SiteKurulum" />
</beans>

